    "import pyinputplus as pyip\n",
    "price = pyip.inputInt(\"購買金額:\",min=0)\n",
    "print(price)\n",
    "if price >= 100000:\n",
    "    price *= 0.8\n",
    "elif price >= 50000:\n",
    "    price *= 0.85\n",
    "elif price >= 30000 :\n",
    "    price *= 0.9\n",
    "elif price >= 10000:\n",
    "    price *= 0.95\n",
    "print(f\"打折後的金額是:{round(price)}\")       "
   ]
